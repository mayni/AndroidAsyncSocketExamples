<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.github.reneweb.androidasyncsocketexamples.UserLogsFragment">
    <LinearLayout
        android:id="@+id/REPLACE_HOLDER"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:text="status"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="150dp">
            <Button
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="2"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="3"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:text="4"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Countdown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/rightwork"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="right"/>
            <Button
                android:id="@+id/leftwork"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="left"/>
            <Button
                android:id="@+id/bothwork"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="both"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/emergency"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/red"
                android:background="@drawable/round_button"
                android:text="EMERgency"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom | end"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/calibrate_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:backgroundTint="@color/lightBlue"
                android:text="calibrate"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
