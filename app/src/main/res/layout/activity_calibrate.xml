<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.github.reneweb.androidasyncsocketexamples.CalibrateActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <TextView

            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Calibrate : "
            android:textSize="30sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/calibrate_angle"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:text="angle"
            android:textSize="30sp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/change_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/xPo"
            android:layout_width="wrap_content"
            android:textSize="50sp"
            android:layout_height="wrap_content"
            android:text="x"/>
        <TextView
            android:id="@+id/yPo"
            android:layout_width="wrap_content"
            android:textSize="50sp"
            android:layout_height="wrap_content"
            android:text="y"/>
        <TextView
            android:id="@+id/zPo"
            android:layout_width="wrap_content"
            android:textSize="50sp"
            android:layout_height="wrap_content"
            android:text="z"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/startcalibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="40sp"
                android:text="start" />
            <Button
                android:id="@+id/cancelcalibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/calibrate_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibrate Right"/>
        <Button
            android:id="@+id/calibrate_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibrate Left"/>
    </LinearLayout>



</LinearLayout>
